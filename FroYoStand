 */
public class FroYo extends Vendor{

	public FroYo(int peoplePresent) {
		
		//passing the people that will be attending the park
		super(peoplePresent);
		
		//setting the average amount of food spent at the stand
		super.setFoodPrice(5.0);
		
		//setting the employees needed to run the stand
		super.setEmployeesNeeded(6);
		
		//setting the people that will go to the stand based on the popularity factor of 30%
		super.setPeoplePerDay(0.3);
	}
	public double getProfit()
	{
		return calculateProfit();
	}

	
}
